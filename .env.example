# Required API keys
ALPACA_API_KEY=your_alpaca_api_key
ALPACA_SECRET_KEY=your_alpaca_secret_key

# Default is Alpaca paper trading endpoint.
# Switch to live explicitly only when you intend to place live orders.
ALPACA_BASE_URL=https://paper-api.alpaca.markets
ALPACA_DATA_URL=https://data.alpaca.markets

# App defaults
SYMBOLS=SPY
# Optional per-strategy universes (fallback is SYMBOLS):
SMA_CROSSOVER_SYMBOLS=SPY
HFT_PULSE_SYMBOLS=SPY
DATA_SOURCE=alpaca
HISTORICAL_DATA_DIR=historical_data
TIMEFRAME=1D
STRATEGY=sma_crossover
DRY_RUN=true
ALLOW_SHORT=true
LOG_LEVEL=INFO
LOG_FILE=
ORDER_QTY=1
LOOP_INTERVAL_SECONDS=5
BACKTEST_STARTING_CASH=100000

# Strategy params (SMA crossover)
SMA_SHORT_WINDOW=20
SMA_LONG_WINDOW=50

# Strategy params (HFT pulse demo)
HFT_MOMENTUM_WINDOW=3
HFT_VOLATILITY_WINDOW=12
HFT_MIN_VOLATILITY=0.0005
HFT_FLIP_SECONDS=3
