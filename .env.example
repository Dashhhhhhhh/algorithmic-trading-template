MODE=live
STRATEGY=sma_crossover

# Asset universe used when SYMBOLS is unset.
# Allowed values: stocks, crypto, all
ASSET_UNIVERSE=stocks
STOCK_UNIVERSE=SPY,QQQ,AAPL
CRYPTO_UNIVERSE=BTCUSD,ETHUSD

# Optional explicit override for the tradable list.
SYMBOLS=

# Optional finite cycle limit:
# - unset: live runs continuously, backtest runs 1 cycle
# - set N: run exactly N cycles then exit
CYCLES=

# Seconds between full cycles (fetch data -> decide -> submit).
# Also supports POLLING_INTERVAL_SECONDS as an alias.
INTERVAL_SECONDS=5
DATA_SOURCE=auto
HISTORICAL_DATA_DIR=historical_data
EVENTS_DIR=runs
STATE_DB_PATH=state/algotrade_state.db
LOG_LEVEL=INFO
DEFAULT_ORDER_TYPE=market
ORDER_QTY=1
ALLOW_SHORT=true
MAX_ABS_POSITION_PER_SYMBOL=100
ALPACA_API_KEY=your_alpaca_api_key
ALPACA_SECRET_KEY=your_alpaca_secret_key
ALPACA_BASE_URL=https://paper-api.alpaca.markets
ALPACA_DATA_URL=https://data.alpaca.markets
TIMEFRAME=1Day
BACKTEST_STARTING_CASH=100000
SMA_SHORT_WINDOW=20
SMA_LONG_WINDOW=50
MOMENTUM_LOOKBACK_BARS=10
MOMENTUM_THRESHOLD=0.01
MOMENTUM_MAX_ABS_QTY=2
SCALPING_LOOKBACK_BARS=2
SCALPING_THRESHOLD=0.05
SCALPING_MAX_ABS_QTY=1
SCALPING_FLIP_SECONDS=1
SCALPING_ALLOW_SHORT=false
