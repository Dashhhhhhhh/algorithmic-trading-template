# Required API keys
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_key
ALPACA_API_KEY=your_alpaca_api_key
ALPACA_SECRET_KEY=your_alpaca_secret_key

# Default is Alpaca paper trading endpoint.
# Switch to live explicitly only when you intend to place live orders.
ALPACA_BASE_URL=https://paper-api.alpaca.markets/v2

# App defaults
SYMBOLS=SPY
TIMEFRAME=1D
STRATEGY=sma_crossover
DRY_RUN=true
LOG_LEVEL=INFO
LOG_FILE=
ORDER_QTY=1

# Strategy params (SMA crossover)
SMA_SHORT_WINDOW=20
SMA_LONG_WINDOW=50

